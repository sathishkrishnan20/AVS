<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sathish.avs.AddMembers">

      <ProgressBar
        android:id="@+id/login_progress1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#aae7dcdc"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:paddingTop="5dp">

            <AutoCompleteTextView
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:drawableLeft="@drawable/ic_action_person"
                android:drawableTint="@color/colorPrimaryDark"
                android:inputType="textPersonName"
                android:maxLines="1" />

            <AutoCompleteTextView
                android:id="@+id/uniqueUserName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="UserName"
                android:drawableLeft="@drawable/ic_action_person"
                android:drawableTint="@color/colorPrimaryDark"
                android:inputType="textPersonName"
                android:maxLines="1" />


            <AutoCompleteTextView
                android:id="@+id/mobileNo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_phone"
                android:hint="Mobile Number"
                android:drawableTint="@color/colorPrimaryDark"
                android:inputType="number"
                android:maxLines="1" />

         <!--   <AutoCompleteTextView
                android:id="@+id/place1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_place"
                android:hint="Place"
                android:drawableTint="@color/colorPrimaryDark"
                android:inputType="text"
                android:maxLines="1" /> -->

            <AutoCompleteTextView
                android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_email"
                android:hint="Email"
                android:drawableTint="@color/colorPrimaryDark"
                android:inputType="text"
                android:maxLines="1" />

            <AutoCompleteTextView
                android:id="@+id/job1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_action_about"
                android:hint="Job"
                android:drawableTint="@color/colorPrimaryDark"
                android:inputType="text"
                android:maxLines="1" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <AutoCompleteTextView
                    android:id="@+id/DOB1"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_gravity="right"
                    android:drawableLeft="@drawable/ic_action_go_to_today"
                    android:hint="DOB"
                    android:layout_weight="1"
                    android:ems="10"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:inputType="date"
                    android:maxLines="1" />

                <Spinner
                    android:id="@+id/bgspinner"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:entries="@array/bgroup" />

                <RadioGroup
                    android:layout_width="10dp"
                    android:layout_weight="0.5"
                    android:id="@+id/gender"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/Male"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:checked="true"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:text="M" />

                    <RadioButton
                        android:layout_height="wrap_content"
                        android:layout_width="60dp"
                        android:id="@+id/FeMale"
                        android:buttonTint="@color/colorPrimaryDark"
                        android:layout_gravity="center_horizontal"
                        android:checked="false"
                        android:text="F"/>
                </RadioGroup>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textAllCaps="false"
                android:textSize="20dp"/>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/userAddressHomeNo"
                android:hint="home No"
                android:layout_marginTop="1dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/userAddressStreet"
                android:hint="Street"
                android:layout_marginTop="1dp" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/userAddressPlace"
                android:hint="Place"
                android:layout_marginTop="1dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/userAddressDistrict"
                android:hint="District"
                android:layout_marginTop="1dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/userAddressState"
                android:hint="State"
                android:layout_marginTop="1dp"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/userAddressCountry"
                android:hint="Country"
                android:layout_marginTop="1dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/userAddressPincode"
                android:hint="Pin Code"
                android:layout_marginTop="1dp" />

            <Button
                android:id="@+id/registerBtn1"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:text="Add Member"
                android:textStyle="bold"
                android:textSize="18sp"/>

        </LinearLayout>
      </RelativeLayout>
    </ScrollView>
</RelativeLayout>
